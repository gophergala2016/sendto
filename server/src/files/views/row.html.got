{{ if not .file.Id }}
    <tr class="data-table-head">
        <td>Name</td>
        <td>Sender</td>
        <td>Updated</td>
        <td></td>
    </tr>
{{ else }}
    <tr {{ if odd .i }}class="odd"{{end}}>
        <td><a href="/files/{{.file.Id}}/download">{{ .file.Name }}</a></td>
        <td>{{ .file.Sender }}</td>
        <td>{{ time .file.UpdatedAt }}</td>
        <td><a href="/files/{{.file.Id}}/update" method="post">Delete</a></td>
    </tr>
{{ end }}